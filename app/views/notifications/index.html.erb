<main class="min-h-screen bg-neutral-25 px-6 py-12">
  <div class="mx-auto max-w-2xl space-y-6">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="font-display text-3xl font-semibold text-slate-900">Notifications</h1>
        <p class="text-slate-600"><%= @unread_count %> unread</p>
      </div>
      <% if @notifications.any? %>
        <%= button_to "Mark all as read", mark_all_as_read_notifications_path, method: :patch, class: "btn btn-secondary text-sm" %>
      <% end %>
    </div>

    <% if @notifications.any? %>
      <div class="space-y-3">
        <% @notifications.each do |notification| %>
          <div class="card flex items-start gap-4 <%= notification.read? ? 'opacity-60' : '' %>">
            <!-- Avatar/Icon -->
            <div class="flex-shrink-0">
              <% if notification.notifiable.is_a?(Follow) && notification.notifiable.follower %>
                <% user = notification.notification_type == "follow_accepted" ? notification.notifiable.followed : notification.notifiable.follower %>
                <% if user.profile_image_url.present? %>
                  <%= image_tag user.profile_image_url, alt: user.username, class: "h-10 w-10 rounded-full object-cover" %>
                <% else %>
                  <div class="flex h-10 w-10 items-center justify-center rounded-full bg-gradient-to-br from-brand-500 to-brand-700 text-sm font-semibold text-white">
                    <%= user.username.first.upcase %>
                  </div>
                <% end %>
              <% else %>
                <div class="flex h-10 w-10 items-center justify-center rounded-full bg-slate-100">
                  <svg class="h-5 w-5 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
                  </svg>
                </div>
              <% end %>
            </div>

            <!-- Content -->
            <div class="flex-1 min-w-0">
              <p class="text-slate-900"><%= notification.message %></p>
              <p class="mt-1 text-sm text-slate-500"><%= time_ago_in_words(notification.created_at) %> ago</p>
              
              <% if notification.actionable? %>
                <div class="mt-3 flex gap-2">
                  <%= button_to "Accept", accept_follow_path(notification.notifiable), method: :patch, class: "btn btn-primary text-sm px-3 py-1" %>
                  <%= button_to "Decline", reject_follow_path(notification.notifiable), method: :delete, class: "btn btn-secondary text-sm px-3 py-1" %>
                </div>
              <% end %>
            </div>

            <!-- Read indicator / Mark as read -->
            <div class="flex-shrink-0">
              <% unless notification.read? %>
                <%= button_to mark_as_read_notification_path(notification), method: :patch, class: "p-1 text-slate-400 hover:text-slate-600", title: "Mark as read" do %>
                  <span class="h-2 w-2 rounded-full bg-brand-500 block"></span>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="card text-center py-16">
        <svg class="mx-auto h-16 w-16 text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
        </svg>
        <h2 class="mt-4 text-xl font-semibold text-slate-900">No notifications yet</h2>
        <p class="mt-2 text-slate-600">When someone follows you or interacts with your content, you'll see it here.</p>
      </div>
    <% end %>
  </div>
</main>
