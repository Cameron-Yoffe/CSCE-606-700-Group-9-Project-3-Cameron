<main class="min-h-screen bg-neutral-25 px-6 py-12">
  <div class="mx-auto max-w-5xl space-y-8">
    <section class="card grid gap-6 md:grid-cols-[auto,1fr] md:items-center">
      <div class="flex items-center gap-4">
        <% if @user.profile_image_url.present? %>
          <%= image_tag @user.profile_image_url, alt: "#{@user.username} avatar", class: "h-24 w-24 rounded-full object-cover ring-4 ring-brand-100 shadow-md" %>
        <% else %>
          <div class="flex h-24 w-24 items-center justify-center rounded-full bg-gradient-to-br from-brand-500 to-brand-700 text-3xl font-semibold text-white shadow-md">
            <%= @user.username.first.upcase %>
          </div>
        <% end %>
        <div>
          <p class="text-sm font-semibold uppercase tracking-wide text-brand-700">Profile</p>
          <div class="flex items-center gap-2">
            <h1 class="font-display text-3xl font-semibold text-slate-900"><%= @user.username %></h1>
            <% if @user.is_private? %>
              <span class="inline-flex items-center gap-1 rounded-full bg-slate-100 px-2 py-0.5 text-xs font-medium text-slate-600">
                <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/>
                </svg>
                Private
              </span>
            <% end %>
          </div>
          <p class="text-slate-700 max-w-xl"><%= @user.bio.presence || "Add a short bio to tell others about your movie tastes." %></p>
          
          <!-- Followers/Following Counts -->
          <div class="mt-2 flex items-center gap-4 text-sm">
            <%= link_to user_followers_path(@user), class: "hover:text-brand-600" do %>
              <span class="font-semibold text-slate-900"><%= @followers_count %></span>
              <span class="text-slate-600">followers</span>
            <% end %>
            <%= link_to user_following_path(@user), class: "hover:text-brand-600" do %>
              <span class="font-semibold text-slate-900"><%= @following_count %></span>
              <span class="text-slate-600">following</span>
            <% end %>
          </div>
        </div>
      </div>
      <div class="flex flex-wrap items-center justify-end gap-3 text-sm text-slate-600">
        <div class="rounded-full bg-neutral-50 px-3 py-1 ring-1 ring-neutral-100">Member since <%= @user.created_at.to_fs(:long) %></div>
        <% if @viewing_own_profile %>
          <%= link_to "Go to dashboard", dashboard_path, class: "btn btn-secondary" %>
          <%= link_to "Edit Profile", profile_edit_path, class: "btn btn-primary" %>
        <% else %>
          <!-- Follow/Unfollow Button -->
          <% if @follow_status == "accepted" %>
            <%= button_to "Following", follow_path(@follow), method: :delete, class: "btn btn-secondary", data: { confirm: "Are you sure you want to unfollow #{@user.username}?" } %>
          <% elsif @follow_status == "pending" %>
            <%= button_to "Requested", follow_path(@follow), method: :delete, class: "btn btn-secondary text-amber-600 border-amber-300 bg-amber-50", data: { confirm: "Cancel follow request?" } %>
          <% else %>
            <%= button_to "Follow", follow_user_path(@user), method: :post, class: "btn btn-primary" %>
          <% end %>
        <% end %>
      </div>
    </section>

    <% if @is_private_and_not_following %>
      <!-- Private Profile Message - Instagram Style -->
      <section class="card text-center py-20">
        <div class="mx-auto max-w-md">
          <div class="mx-auto mb-6 flex h-24 w-24 items-center justify-center rounded-full border-2 border-slate-300">
            <svg class="h-12 w-12 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
            </svg>
          </div>
          <h2 class="text-xl font-semibold text-slate-900">This Account is Private</h2>
          <p class="mt-3 text-slate-600">Follow this account to see their movies, ratings, and activity.</p>
          <% if @follow_status == "pending" %>
            <div class="mt-6">
              <span class="inline-flex items-center gap-2 rounded-full bg-amber-50 px-4 py-2 text-sm font-medium text-amber-700 ring-1 ring-amber-200">
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                Follow Request Sent
              </span>
            </div>
          <% else %>
            <%= button_to "Follow", follow_user_path(@user), method: :post, class: "mt-6 inline-flex items-center gap-2 rounded-lg bg-brand-600 px-6 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-brand-700 transition" %>
          <% end %>
        </div>
      </section>
    <% else %>

    <!-- Top Movies Section -->
    <% if @viewing_own_profile %>
    <section 
      class="card space-y-4" 
      data-controller="top-movies"
      data-available-favorites='<%= (@available_favorites || []).map { |f| { id: f.id, movie: { id: f.movie.id, title: f.movie.title, poster_url: f.movie.poster_url, tmdb_id: f.movie.tmdb_id } } }.to_json %>'>
    <% else %>
    <section class="card space-y-4">
    <% end %>
      <div class="flex items-center justify-between">
        <h2 class="text-xl font-semibold text-slate-900">Top Movies</h2>
        <span class="text-sm text-slate-600"><%= @viewing_own_profile ? "Your top 5 favorite movies" : "#{@user.username}'s top 5 favorite movies" %></span>
      </div>
      
      <div class="grid gap-4 md:grid-cols-5">
        <% (1..5).each do |position| %>
          <% top_movie = @top_movies&.find { |tm| tm.top_position == position } %>
          
          <% if top_movie %>
            <!-- Filled Slot with Movie -->
            <div class="group relative aspect-[2/3] overflow-hidden rounded-lg bg-neutral-100 shadow-md transition-transform hover:scale-105" data-position="<%= position %>">
              <%= image_tag top_movie.movie.poster_url, alt: top_movie.movie.title, class: "h-full w-full object-cover" if top_movie.movie.poster_url.present? %>
              
              <!-- Position Badge -->
              <div class="absolute left-2 top-2 flex h-8 w-8 items-center justify-center rounded-full bg-brand-500 text-sm font-bold text-white shadow-lg">
                <%= position %>
              </div>
              
              <!-- Hover Overlay with Actions -->
              <div class="absolute inset-0 flex flex-col items-center justify-center gap-2 bg-black/70 opacity-0 transition-opacity group-hover:opacity-100">
                <p class="px-2 text-center text-sm font-medium text-white"><%= top_movie.movie.title %></p>
                <% if @viewing_own_profile %>
                <button 
                  class="rounded-lg bg-red-500 px-3 py-1 text-xs font-medium text-white hover:bg-red-600"
                  data-action="click->top-movies#removeFromTop"
                  data-favorite-id="<%= top_movie.id %>"
                  data-position="<%= position %>">
                  Remove
                </button>
                <% end %>
              </div>
            </div>
          <% else %>
            <!-- Empty Slot -->
            <% if @viewing_own_profile %>
            <div 
              class="group relative aspect-[2/3] cursor-pointer overflow-hidden rounded-lg border-2 border-dashed border-neutral-300 bg-neutral-50 transition-all hover:border-brand-400 hover:bg-brand-50"
              data-action="click->top-movies#openMovieSelector"
              data-position="<%= position %>">
              
              <div class="flex h-full flex-col items-center justify-center gap-2 text-neutral-400 group-hover:text-brand-500">
                <!-- Plus Icon -->
                <svg class="h-12 w-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                <p class="text-xs font-medium">Add Movie</p>
              </div>
              
              <!-- Position Badge -->
              <div class="absolute left-2 top-2 flex h-8 w-8 items-center justify-center rounded-full bg-neutral-200 text-sm font-bold text-neutral-600 group-hover:bg-brand-100 group-hover:text-brand-700">
                <%= position %>
              </div>
            </div>
            <% else %>
            <div class="relative aspect-[2/3] overflow-hidden rounded-lg border-2 border-dashed border-neutral-200 bg-neutral-50">
              <div class="absolute left-2 top-2 flex h-8 w-8 items-center justify-center rounded-full bg-neutral-200 text-sm font-bold text-neutral-400">
                <%= position %>
              </div>
            </div>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </section>

    <section class="grid gap-4 md:grid-cols-3">
      <div class="card space-y-2">
        <p class="text-sm font-medium text-slate-600">Diary entries</p>
        <p class="text-4xl font-display font-semibold text-slate-900"><%= @diary_count %></p>
        <p class="text-slate-600">Total movies <%= @viewing_own_profile ? "you have" : "#{@user.username} has" %> logged so far.</p>
      </div>
      <div class="card space-y-2">
        <p class="text-sm font-medium text-slate-600">This year</p>
        <p class="text-4xl font-display font-semibold text-slate-900"><%= @yearly_movies_logged %></p>
        <p class="text-slate-600">Movies added to <%= @viewing_own_profile ? "your" : "their" %> diary in <%= Date.current.year %>.</p>
      </div>
      <div class="card space-y-2">
        <p class="text-sm font-medium text-slate-600">Average rating</p>
        <p class="text-4xl font-display font-semibold text-slate-900"><%= @average_rating.present? ? sprintf("%.1f", @average_rating) : "-" %></p>
        <p class="text-slate-600">Across <%= @viewing_own_profile ? "your" : "their" %> ratings and diary entries.</p>
      </div>
    </section>

    <% if @viewing_own_profile %>
    <section class="card space-y-4">
      <div class="flex items-center justify-between">
        <div>
          <h2 class="text-xl font-semibold text-slate-900">Import diary from Letterboxd</h2>
          <p class="text-slate-600 text-sm">Upload your Letterboxd diary CSV export to backfill your diary entries.</p>
        </div>
        <span class="badge">Beta</span>
      </div>

      <%= form_with url: profile_import_letterboxd_path, method: :post, multipart: true, local: true, class: "space-y-4" do |form| %>
        <div class="flex flex-col gap-3 md:flex-row md:items-center">
          <%= form.file_field :letterboxd_file, accept: ".csv", class: "flex-1 rounded-lg border border-neutral-200 bg-neutral-25 px-4 py-2 text-sm text-slate-700 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-100" %>
          <%= form.submit "Import from Letterboxd", class: "btn btn-primary" %>
        </div>
        <p class="text-xs text-slate-600">We will skip any movies you've already logged on the same date and mark repeat watches as rewatches.</p>
      <% end %>
    </section>
    <% end %>

    <section class="card space-y-4">
      <div class="flex items-center justify-between">
        <div>
          <h2 class="text-xl font-semibold text-slate-900">Import ratings from Letterboxd</h2>
          <p class="text-slate-600 text-sm">Upload your Letterboxd ratings CSV export to backfill your ratings.</p>
        </div>
        <span class="badge">Beta</span>
      </div>

      <%= form_with url: profile_import_letterboxd_ratings_path, method: :post, multipart: true, local: true, class: "space-y-4" do |form| %>
        <div class="flex flex-col gap-3 md:flex-row md:items-center">
          <%= form.file_field :letterboxd_ratings_file, accept: ".csv", class: "flex-1 rounded-lg border border-neutral-200 bg-neutral-25 px-4 py-2 text-sm text-slate-700 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-100" %>
          <%= form.submit "Import ratings", class: "btn btn-primary" %>
        </div>
        <p class="text-xs text-slate-600">We will skip any ratings you've already logged and convert Letterboxd scores to a 10-point scale.</p>
      <% end %>
    </section>

    <section class="grid gap-6 md:grid-cols-2">
      <div class="card space-y-4">
        <div class="flex items-center justify-between">
          <h2 class="text-xl font-semibold text-slate-900">Favorite genres</h2>
          <span class="badge">Auto-calculated</span>
        </div>
        <% if @favorite_genres.any? %>
          <div class="space-y-4">
            <% @favorite_genres.each do |genre, count| %>
              <div class="space-y-2 rounded-xl bg-neutral-50 px-4 py-3 ring-1 ring-neutral-100">
                <div class="flex items-center justify-between text-sm">
                  <span class="font-semibold text-slate-900"><%= genre %></span>
                  <span class="text-slate-600"><%= pluralize(count, "log") %></span>
                </div>
                <div class="h-2 w-full overflow-hidden rounded-full bg-neutral-100">
                  <div
                    class="h-full rounded-full bg-brand-500"
                    style="width: <%= @max_genre_count.positive? ? ((count.to_f / @max_genre_count) * 100).round(1) : 0 %>%"></div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-slate-600">Log a few movies to see your top genres.</p>
        <% end %>
      </div>
      <div class="card space-y-4">
        <div class="flex items-center justify-between">
          <h2 class="text-xl font-semibold text-slate-900">Favorite directors</h2>
          <span class="badge">Auto-calculated</span>
        </div>
        <% if @favorite_directors.any? %>
          <div class="space-y-4">
            <% @favorite_directors.each do |director, count| %>
              <div class="space-y-2 rounded-xl bg-neutral-50 px-4 py-3 ring-1 ring-neutral-100">
                <div class="flex items-center justify-between text-sm">
                  <span class="font-semibold text-slate-900"><%= director %></span>
                  <span class="text-slate-600"><%= pluralize(count, "log") %></span>
                </div>
                <div class="h-2 w-full overflow-hidden rounded-full bg-neutral-100">
                  <div
                    class="h-full rounded-full bg-brand-600"
                    style="width: <%= @max_director_count.positive? ? ((count.to_f / @max_director_count) * 100).round(1) : 0 %>%"></div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-slate-600">Your most-watched directors will appear here.</p>
        <% end %>
      </div>
    </section>

    <section class="grid gap-6 md:grid-cols-2">
      <div class="card space-y-4">
        <div class="flex items-center justify-between">
          <h2 class="text-xl font-semibold text-slate-900">Movies logged this year</h2>
          <span class="text-sm text-slate-600">Monthly totals</span>
        </div>
        <canvas
          data-controller="chart"
          data-chart-type-value="bar"
          data-chart-title-value="Movies logged this year"
          data-chart-data-value="<%= @monthly_chart_data.to_json %>"
          height="200"
        ></canvas>
      </div>
      <div class="card space-y-4">
        <div class="flex items-center justify-between">
          <h2 class="text-xl font-semibold text-slate-900">Genre breakdown</h2>
          <span class="text-sm text-slate-600">Based on diary entries</span>
        </div>
        <canvas
          data-controller="chart"
          data-chart-type-value="pie"
          data-chart-title-value="Favorite genres"
          data-chart-data-value="<%= @genre_chart_data.to_json %>"
          height="200"
        ></canvas>
      </div>
    </section>
    <% end %>
  </div>
</main>
