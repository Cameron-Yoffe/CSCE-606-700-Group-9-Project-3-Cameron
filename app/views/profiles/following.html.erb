<main class="min-h-screen bg-neutral-25 px-6 py-12">
  <div class="mx-auto max-w-2xl space-y-6">
    <div>
      <%= link_to "â† Back to #{@user.username}'s profile", user_profile_path(@user), class: "text-sm text-brand-600 hover:text-brand-800" %>
      <h1 class="mt-2 font-display text-3xl font-semibold text-slate-900">Following</h1>
      <p class="text-slate-600">Following <%= @following.count %> <%= "person".pluralize(@following.count) %></p>
    </div>

    <% if @following.any? %>
      <div class="space-y-3">
        <% @following.each do |user| %>
          <%= link_to user_profile_path(user), class: "card flex items-center gap-4 hover:ring-2 hover:ring-brand-100 transition-all" do %>
            <% if user.profile_image_url.present? %>
              <%= image_tag user.profile_image_url, alt: user.username, class: "h-12 w-12 rounded-full object-cover" %>
            <% else %>
              <div class="flex h-12 w-12 items-center justify-center rounded-full bg-gradient-to-br from-brand-500 to-brand-700 text-lg font-semibold text-white">
                <%= user.username.first.upcase %>
              </div>
            <% end %>
            <div class="flex-1 min-w-0">
              <p class="font-semibold text-slate-900 truncate"><%= user.username %></p>
              <p class="text-sm text-slate-600 truncate"><%= user.bio.presence || "No bio" %></p>
            </div>
            <% if user.is_private? %>
              <span class="inline-flex items-center gap-1 rounded-full bg-slate-100 px-2 py-0.5 text-xs font-medium text-slate-600">
                <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/>
                </svg>
              </span>
            <% end %>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="card text-center py-16">
        <svg class="mx-auto h-16 w-16 text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
        </svg>
        <h2 class="mt-4 text-xl font-semibold text-slate-900">Not following anyone yet</h2>
        <p class="mt-2 text-slate-600">When this account follows people, they'll appear here.</p>
      </div>
    <% end %>
  </div>
</main>
