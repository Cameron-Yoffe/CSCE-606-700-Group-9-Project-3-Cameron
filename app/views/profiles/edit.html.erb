<main class="min-h-screen bg-neutral-25 px-6 py-12">
  <div class="mx-auto max-w-2xl space-y-6">
    <div>
      <%= link_to "â† Back to profile", profile_path, class: "text-sm text-brand-600 hover:text-brand-800" %>
      <h1 class="mt-2 font-display text-3xl font-semibold text-slate-900">Edit Profile</h1>
    </div>

    <%= form_with model: @user, url: profile_path, method: :patch, local: true, class: "space-y-6" do |form| %>
      <% if @user.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <h3 class="text-red-800 font-semibold">Please fix the following errors:</h3>
          <ul class="mt-2 list-disc list-inside text-sm text-red-700">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="card space-y-6">
        <h2 class="text-lg font-semibold text-slate-900">Personal Information</h2>

        <div class="grid gap-4 md:grid-cols-2">
          <div>
            <%= form.label :first_name, class: "block text-sm font-medium text-slate-700 mb-1" %>
            <%= form.text_field :first_name, class: "w-full rounded-lg border border-neutral-200 bg-neutral-25 px-4 py-2 text-slate-700 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-100" %>
          </div>
          <div>
            <%= form.label :last_name, class: "block text-sm font-medium text-slate-700 mb-1" %>
            <%= form.text_field :last_name, class: "w-full rounded-lg border border-neutral-200 bg-neutral-25 px-4 py-2 text-slate-700 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-100" %>
          </div>
        </div>

        <div>
          <%= form.label :bio, class: "block text-sm font-medium text-slate-700 mb-1" %>
          <%= form.text_area :bio, rows: 4, class: "w-full rounded-lg border border-neutral-200 bg-neutral-25 px-4 py-2 text-slate-700 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-100", placeholder: "Tell others about your movie tastes..." %>
          <p class="mt-1 text-xs text-slate-500">Max 500 characters</p>
        </div>

        <div>
          <%= form.label :profile_image_url, "Profile Image URL", class: "block text-sm font-medium text-slate-700 mb-1" %>
          <%= form.text_field :profile_image_url, class: "w-full rounded-lg border border-neutral-200 bg-neutral-25 px-4 py-2 text-slate-700 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-100", placeholder: "https://example.com/your-photo.jpg" %>
        </div>
      </div>

      <div class="card space-y-6">
        <h2 class="text-lg font-semibold text-slate-900">Privacy Settings</h2>

        <div class="flex items-center justify-between">
          <div>
            <p class="font-medium text-slate-900">Private Account</p>
            <p class="text-sm text-slate-600">When enabled, only approved followers can see your movie activity and reviews.</p>
          </div>
          <label class="relative inline-flex cursor-pointer items-center">
            <%= form.check_box :is_private, class: "peer sr-only" %>
            <div class="peer h-6 w-11 rounded-full bg-neutral-200 after:absolute after:left-[2px] after:top-[2px] after:h-5 after:w-5 after:rounded-full after:border after:border-neutral-300 after:bg-white after:transition-all after:content-[''] peer-checked:bg-brand-500 peer-checked:after:translate-x-full peer-checked:after:border-white peer-focus:ring-4 peer-focus:ring-brand-100"></div>
          </label>
        </div>
      </div>

      <div class="flex items-center justify-end gap-3">
        <%= link_to "Cancel", profile_path, class: "btn btn-secondary" %>
        <%= form.submit "Save Changes", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</main>
