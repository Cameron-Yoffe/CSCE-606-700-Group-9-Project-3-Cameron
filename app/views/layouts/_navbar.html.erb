<nav class="bg-white shadow-sm">
  <div class="container mx-auto px-4 py-3 flex items-center justify-between">
    <div class="flex items-center space-x-6">
      <%= link_to "Movie Diary", logged_in? ? dashboard_path : root_path, class: "text-xl font-bold text-gray-900" %>
      <div class="hidden md:flex items-center space-x-4 text-sm font-medium text-gray-700">
        <%= link_to "Movies", movies_path, class: "hover:text-indigo-600" %>
        <% if logged_in? %>
          <%= link_to "Diary", diary_entries_path, class: "hover:text-indigo-600" %>
          <%= link_to "My Library", favorites_path, class: "hover:text-indigo-600" %>
          <%= link_to "Profile", profile_path, class: "hover:text-indigo-600" %>
        <% end %>
      </div>
    </div>

    <div class="flex items-center space-x-3">
      <% if logged_in? %>
        <!-- Notifications Bell -->
        <div class="relative" data-controller="notifications-dropdown">
          <button 
            type="button"
            data-action="click->notifications-dropdown#toggle"
            class="relative p-2 text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-full transition-colors">
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
            </svg>
            <% if current_user.unread_notifications_count > 0 %>
              <span class="absolute -top-1 -right-1 flex h-5 w-5 items-center justify-center rounded-full bg-red-500 text-xs font-bold text-white">
                <%= current_user.unread_notifications_count > 9 ? "9+" : current_user.unread_notifications_count %>
              </span>
            <% end %>
          </button>
          
          <!-- Notifications Dropdown -->
          <div 
            data-notifications-dropdown-target="menu"
            class="absolute right-0 mt-2 w-80 origin-top-right rounded-lg bg-white shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none hidden z-50">
            <div class="px-4 py-3 border-b border-gray-100">
              <div class="flex items-center justify-between">
                <h3 class="text-sm font-semibold text-gray-900">Notifications</h3>
                <%= link_to "View all", notifications_path, class: "text-xs text-indigo-600 hover:text-indigo-800" %>
              </div>
            </div>
            <div class="max-h-96 overflow-y-auto py-2" data-notifications-dropdown-target="list">
              <% current_user.notifications.recent.limit(5).each do |notification| %>
                <div class="px-4 py-3 hover:bg-gray-50 <%= notification.read? ? 'opacity-60' : '' %>">
                  <p class="text-sm text-gray-900"><%= notification.message %></p>
                  <p class="mt-1 text-xs text-gray-500"><%= time_ago_in_words(notification.created_at) %> ago</p>
                  <% if notification.actionable? %>
                    <div class="mt-2 flex gap-2">
                      <%= button_to "Accept", accept_follow_path(notification.notifiable), method: :patch, class: "text-xs bg-indigo-600 text-white px-2 py-1 rounded hover:bg-indigo-700" %>
                      <%= button_to "Decline", reject_follow_path(notification.notifiable), method: :delete, class: "text-xs bg-gray-200 text-gray-700 px-2 py-1 rounded hover:bg-gray-300" %>
                    </div>
                  <% end %>
                </div>
              <% end %>
              <% if current_user.notifications.empty? %>
                <p class="px-4 py-6 text-sm text-gray-500 text-center">No notifications yet</p>
              <% end %>
            </div>
          </div>
        </div>

        <span class="hidden sm:inline text-sm text-gray-600">Signed in as <%= current_user.username || current_user.email %></span>
        <%= link_to "View Profile", profile_path, class: "bg-indigo-600 text-white px-3 py-2 rounded-md shadow hover:bg-indigo-700 text-sm font-semibold" %>
        <%= button_to "Sign Out", logout_path, method: :delete, class: "bg-red-600 hover:bg-red-700 text-white font-semibold text-sm px-3 py-2 rounded-md" %>
      <% else %>
        <%= link_to "Sign In", sign_in_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold text-sm px-3 py-2 rounded-md" %>
        <%= link_to "Create Account", sign_up_path, class: "bg-gray-800 hover:bg-gray-900 text-white font-semibold text-sm px-3 py-2 rounded-md" %>
      <% end %>
    </div>
  </div>
</nav>
