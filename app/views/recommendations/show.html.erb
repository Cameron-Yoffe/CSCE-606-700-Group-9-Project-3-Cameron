<main class="min-h-screen bg-neutral-25 px-6 py-12">
  <div class="mx-auto max-w-6xl space-y-8">
    <header class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
      <div class="space-y-2">
        <p class="text-sm font-semibold uppercase tracking-wide text-brand-700">Recommendations</p>
        <h1 class="text-4xl md:text-5xl font-display font-semibold text-slate-900">Discover your next watch</h1>
        <p class="text-lg text-slate-600">Curated picks based on your diary entries and ratings.</p>
      </div>
      <div class="flex flex-wrap gap-3">
        <%= link_to dashboard_path, class: "btn btn-secondary" do %>
          Back to dashboard
        <% end %>
        <%= link_to movies_path, class: "btn btn-primary" do %>
          Browse library
        <% end %>
      </div>
    </header>

    <% if @recommendations.empty? %>
      <section class="card text-center space-y-3">
        <div class="mx-auto flex h-16 w-16 items-center justify-center rounded-full bg-brand-50 text-brand-600">
          <svg class="h-7 w-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <h2 class="text-2xl font-semibold text-slate-900">No recommendations yet</h2>
        <p class="text-slate-600">Log a few diary entries or add ratings so we can learn your taste.</p>
        <div class="flex justify-center">
          <%= link_to movies_path, class: "btn btn-primary" do %>
            Find movies to get started
          <% end %>
        </div>
      </section>
    <% else %>
      <div data-controller="recommendations"
           data-recommendations-movies-value="<%= json_escape(@recommendations.to_json) %>"
           data-recommendations-watchlists-path-value="<%= watchlists_path %>"
           data-recommendations-csrf-token-value="<%= form_authenticity_token %>"
           class="grid gap-6 lg:grid-cols-[2fr,1fr] items-start">
        <section class="card space-y-4">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-slate-500">Personalized picks</p>
              <p class="text-base text-slate-600" data-recommendations-target="statusText">Tap a button to start curating your picks.</p>
            </div>
            <span class="rounded-full bg-brand-50 px-3 py-1 text-xs font-semibold text-brand-700 ring-1 ring-inset ring-brand-100">
              <%= @recommendations.size %> in deck
            </span>
          </div>

          <div class="relative" data-recommendations-target="cardContainer"></div>
        </section>

        <div class="space-y-4">
          <section class="card space-y-3">
            <div class="flex items-center justify-between">
              <h3 class="text-lg font-semibold text-slate-900">Ignored this session</h3>
              <span class="text-xs font-semibold text-slate-500" data-recommendations-target="ignoredCount">0</span>
            </div>
            <ul class="space-y-2" data-recommendations-target="ignoredList">
              <li class="text-sm text-slate-600" data-placeholder="true">Nothing ignored yet.</li>
            </ul>
          </section>

          <section class="card space-y-3">
            <div class="flex items-center justify-between">
              <h3 class="text-lg font-semibold text-slate-900">Added to watchlist</h3>
              <span class="text-xs font-semibold text-slate-500" data-recommendations-target="watchlistCount">0</span>
            </div>
            <ul class="space-y-2" data-recommendations-target="watchlistList">
              <li class="text-sm text-slate-600" data-placeholder="true">No new watchlist picks yet.</li>
            </ul>
          </section>
        </div>
      </div>
    <% end %>
  </div>
</main>
