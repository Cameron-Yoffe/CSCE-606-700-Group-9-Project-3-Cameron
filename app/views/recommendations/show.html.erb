<div class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 py-12">
  <div class="container mx-auto px-6 space-y-8">
    <div class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
      <div>
        <p class="text-sm uppercase tracking-[0.2em] text-amber-300 font-semibold">Movie Recommender</p>
        <h1 class="text-4xl md:text-5xl font-black text-white mt-2">Discover your next watch</h1>
        <p class="text-lg text-slate-300 mt-2">Swipe through personalized picks. Keep the gems, skip the rest.</p>
      </div>
      <div class="flex gap-3">
        <%= link_to dashboard_path, class: "inline-flex items-center px-5 py-3 rounded-xl border border-slate-700 text-slate-200 hover:text-white hover:border-slate-500 transition-all" do %>
          Back to Dashboard
        <% end %>
        <%= link_to movies_path, class: "inline-flex items-center px-5 py-3 bg-gradient-to-r from-amber-500 to-orange-600 hover:from-amber-600 hover:to-orange-700 text-white font-semibold rounded-xl shadow-lg" do %>
          Browse Library
        <% end %>
      </div>
    </div>

    <% if @recommendations.empty? %>
      <div class="rounded-2xl bg-slate-900/70 border border-slate-800 p-8 text-center">
        <p class="text-2xl font-bold text-white mb-2">No recommendations yet</p>
        <p class="text-slate-300 mb-6">Rate a few movies or add diary entries to help us learn your taste.</p>
        <%= link_to movies_path, class: "inline-flex items-center px-6 py-3 bg-amber-500 hover:bg-amber-600 text-white font-semibold rounded-xl shadow" do %>
          Find movies to get started
        <% end %>
      </div>
    <% else %>
      <div data-controller="recommendations"
           data-recommendations-movies-value="<%= json_escape(@recommendations.to_json) %>"
           data-recommendations-watchlists-path-value="<%= watchlists_path %>"
           data-recommendations-csrf-token-value="<%= form_authenticity_token %>"
           class="grid gap-8 lg:grid-cols-[2fr,1fr]">
        <div>
          <div class="relative max-w-3xl mx-auto" data-recommendations-target="cardContainer"></div>
          <p class="mt-4 text-sm text-slate-300" data-recommendations-target="statusText">Tap a button to start curating your picks.</p>
        </div>

        <div class="space-y-6">
          <div class="rounded-2xl bg-slate-900/70 border border-slate-800 p-5">
            <div class="flex items-center justify-between mb-3">
              <h3 class="text-lg font-semibold text-white">Ignored this session</h3>
              <span class="text-xs text-slate-400" data-recommendations-target="ignoredCount">0</span>
            </div>
            <ul class="space-y-2" data-recommendations-target="ignoredList">
              <li class="text-sm text-slate-400" data-placeholder="true">Nothing ignored yet.</li>
            </ul>
          </div>

          <div class="rounded-2xl bg-slate-900/70 border border-slate-800 p-5">
            <div class="flex items-center justify-between mb-3">
              <h3 class="text-lg font-semibold text-white">Added to watchlist</h3>
              <span class="text-xs text-slate-400" data-recommendations-target="watchlistCount">0</span>
            </div>
            <ul class="space-y-2" data-recommendations-target="watchlistList">
              <li class="text-sm text-slate-400" data-placeholder="true">No new watchlist picks yet.</li>
            </ul>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
